#include<bits/stdc++.h>
using namespace std;

int main(){

	ios::sync_with_stdio(false);
	cin.tie(NULL);
	int t;
	cin >> t;
	while(t--){
		int n,a,b;
		cin >> n >> a >> b;
		if ((a*2) < b){
			cout << n*a << "\n";
		}
		else{
			int offerTwo = n / 2;
			if (n%2==0){
				int price = (offerTwo * b);
				cout << price << "\n";
			}
			else{
				int price = (offerTwo * b);
				price = price + a;
				cout << price << "\n";
			}
		}
	}

	return 0;
} 
